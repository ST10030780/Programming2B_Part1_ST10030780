<Window x:Class="CMCSPrototype.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CMCS - Contract Monthly Claim System" Height="497" Width="736">
    <Grid>
        <TextBlock Text="Submit Your Monthly Claim" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>

        <TextBlock Text="Lecturer Name:" VerticalAlignment="Top" Margin="30,80,0,0"/>
        <TextBox Name="LecturerNameInput" Width="200" VerticalAlignment="Top" Margin="120,80,0,0"/>

        <TextBlock Text="Hours Worked:" VerticalAlignment="Top" Margin="30,120,0,0"/>
        <TextBox Name="HoursWorkedInput" Width="200" VerticalAlignment="Top" Margin="120,120,0,0"/>

        <Button Content="Submit Claim" Width="150" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,40" Click="SubmitClaim_Click"/>
    </Grid>
</Window>
